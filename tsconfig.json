{
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "build",
      "lib": ["dom", "esnext"],
      "target": "ES6",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        },
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "jsx": "react-jsx"
    },
    "exclude": ["node_modules", "build", "coverage", "webpack.*.js", "*.config.js", "*.test.ts*"],
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
  }